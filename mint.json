{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Makeswift Docs",
  "logo": {
    "dark": "/images/logo.svg",
    "light": "/images/logo.svg"
  },
  "favicon": "/images/favicon.svg",
  "colors": {
    "primary": "#EA3BA7",
    "light": "#EA3BA7",
    "dark": "#EA3BA7",
    "anchors": {
      "from": "#EA3BA7",
      "to": "#5F49F4"
    }
  },
  "topbarLinks": [],
  "topbarCtaButton": {
    "name": "Log in",
    "url": "https://app.makeswift.com"
  },
  "search": {
    "prompt": "Search or ask..."
  },
  "anchors": [
    {
      "name": "Help Center",
      "icon": "book-open-cover",
      "url": "https://help.makeswift.com"
    },
    {
      "name": "Blog",
      "icon": "newspaper",
      "url": "https://makeswift.com/blog"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": ["quickstart", "concepts"]
    },
    {
      "group": "Pages Router",
      "pages": [
        {
          "group": "Reference",
          "pages": [
            {
              "group": "Components",
              "pages": ["pages-router/reference/components/page"]
            },
            {
              "group": "Controls",
              "pages": [
                "pages-router/reference/controls/checkbox",
                "pages-router/reference/controls/color",
                "pages-router/reference/controls/combobox",
                "pages-router/reference/controls/image",
                "pages-router/reference/controls/link",
                "pages-router/reference/controls/list",
                "pages-router/reference/controls/number",
                "pages-router/reference/controls/rich-text",
                "pages-router/reference/controls/select",
                "pages-router/reference/controls/shape",
                "pages-router/reference/controls/slot",
                "pages-router/reference/controls/style",
                "pages-router/reference/controls/text-area",
                "pages-router/reference/controls/text-input"
              ]
            },
            {
              "group": "Client",
              "pages": [
                "pages-router/reference/client/constructor",
                "pages-router/reference/client/get-sitemap",
                "pages-router/reference/client/get-page-snapshot",
                "pages-router/reference/client/get-site-version"
              ]
            },
            "pages-router/reference/makeswift-api-handler",
            {
              "group": "ReactRuntime",
              "pages": [
                "pages-router/reference/runtime/constructor",
                "pages-router/reference/runtime/register-component"
              ]
            }
          ]
        },
        {
          "group": "Guides",
          "pages": [
            "pages-router/guides/manual-installation",
            "pages-router/guides/extending-the-document",
            "pages-router/guides/localization",
            "pages-router/guides/troubleshooting",
            "pages-router/guides/environments"
          ]
        }
      ]
    },
    {
      "group": "Migrations",
      "pages": ["migrations/0.14.0", "migrations/0.13.0", "migrations/0.9.0"]
    },
    {
      "group": "Integrations",
      "pages": ["integrations/bigcommerce"]
    }
  ],
  "footerSocials": {
    "twitter": "https://twitter.com/makeswifthq",
    "github": "https://github.com/makeswift",
    "linkedin": "https://www.linkedin.com/company/makeswifthq"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": false
  },
  "redirects": [
    {
      "source": "/reference/:slug*",
      "destination": "/pages-router/reference/:slug*"
    },
    {
      "source": "/guides/:slug*",
      "destination": "/pages-router/guides/:slug*"
    }
  ]
}
